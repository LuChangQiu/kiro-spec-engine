{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://scene-capability-engine.dev/contracts/capability-mapping-report.schema.json",
  "title": "Capability Mapping Report Contract",
  "type": "object",
  "required": [
    "mode",
    "mapping_report",
    "missing_capabilities",
    "recommended_templates",
    "ontology_gaps",
    "summary"
  ],
  "properties": {
    "mode": {
      "const": "capability-mapping-report"
    },
    "mapping_report": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "change_id",
          "capability",
          "mapped_templates",
          "ontology_status",
          "status"
        ],
        "properties": {
          "change_id": {
            "type": "string"
          },
          "capability": {
            "type": "string"
          },
          "mapped_templates": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "ontology_status": {
            "type": "string",
            "enum": [
              "covered",
              "gap"
            ]
          },
          "status": {
            "type": "string",
            "enum": [
              "mapped",
              "missing_template",
              "missing_template_and_ontology_gap"
            ]
          }
        },
        "additionalProperties": false
      }
    },
    "missing_capabilities": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "recommended_templates": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "ontology_gaps": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "change_id",
          "type",
          "name",
          "capability"
        ],
        "properties": {
          "change_id": {
            "type": "string"
          },
          "type": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "capability": {
            "type": "string"
          }
        },
        "additionalProperties": false
      }
    },
    "summary": {
      "type": "object",
      "required": [
        "total_changes",
        "mapped_changes",
        "missing_capabilities",
        "ontology_gaps",
        "coverage_percent"
      ],
      "properties": {
        "total_changes": {
          "type": "integer",
          "minimum": 0
        },
        "mapped_changes": {
          "type": "integer",
          "minimum": 0
        },
        "missing_capabilities": {
          "type": "integer",
          "minimum": 0
        },
        "ontology_gaps": {
          "type": "integer",
          "minimum": 0
        },
        "coverage_percent": {
          "type": "number",
          "minimum": 0,
          "maximum": 100
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
