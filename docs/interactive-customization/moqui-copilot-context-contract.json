{
  "version": "1.1.0",
  "product": "scene-capability-engine",
  "context_contract": {
    "required_fields": [
      "product",
      "module",
      "page"
    ],
    "optional_fields": [
      "entity",
      "scene_id",
      "workflow_node",
      "fields",
      "current_state",
      "scene_workspace",
      "assistant_panel"
    ],
    "max_field_count": 400,
    "max_payload_kb": 512
  },
  "security_contract": {
    "mode": "read-only",
    "masking_required": true,
    "sensitive_key_patterns": [
      "password",
      "secret",
      "token",
      "api_key",
      "apikey",
      "credential",
      "email",
      "phone",
      "bank",
      "card"
    ],
    "forbidden_keys": [
      "raw_password",
      "private_key",
      "access_token_plaintext"
    ]
  },
  "runtime_contract": {
    "provider": "ui-context-provider",
    "transport": "json",
    "schema": "docs/interactive-customization/page-context.schema.json",
    "consumer": "scripts/interactive-intent-build.js",
    "loop_entry": "scripts/interactive-customization-loop.js"
  }
}
